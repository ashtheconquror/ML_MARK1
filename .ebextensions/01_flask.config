option_settings:
  aws:elasticbeanstalk:command:
    Timeout: 2000

commands:
  01_setup_swap:
    command: |
      if [ ! -f /var/swap.4gb ]; then
        /bin/dd if=/dev/zero of=/var/swap.4gb bs=1M count=4096
        /bin/chmod 600 /var/swap.4gb      # <--- ADD THIS LINE
        /sbin/mkswap /var/swap.4gb
        /sbin/swapon /var/swap.4gb
      fi